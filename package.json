{
  "name": "nuxt-ui-template-starter",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "nuxt dev --dotenv .env.test",
    "build:test": "nuxt build --dotenv .env.test",
    "build": "nuxt build --dotenv .env.prod",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "typecheck": "nuxi typecheck",
    "commit": "soy git-commit",
    "commit:zh": "soy git-commit -l=zh-cn",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@iconify-json/lucide": "^1.2.79",
    "@iconify-json/simple-icons": "^1.2.62",
    "@nuxt/image": "^1.11.0",
    "@nuxt/ui": "^4.2.1",
    "@pinia/nuxt": "^0.11.3",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "nuxt": "^4.2.2",
    "pinia": "^3.0.4",
    "pinia-plugin-persistedstate": "^4.7.1"
  },
  "devDependencies": {
    "@nuxt/eslint": "^1.12.1",
    "@soybeanjs/cli": "^1.4.1",
    "eslint": "^9.39.1",
    "lint-staged": "^16.2.7",
    "prettier": "3.6.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "vue-tsc": "^3.1.8"
  },
  "resolutions": {
    "unimport": "4.1.1"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm soy git-commit-verify",
    "pre-commit": "pnpm typecheck && pnpm lint-staged"
  },
  "pnpm": {
    "overrides": {
      "ipx": "^3.0.0"
    }
  },
  "packageManager": "pnpm@10.18.3"
}
