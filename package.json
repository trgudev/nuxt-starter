{
  "name": "nuxt-ui-template-starter",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "typecheck": "nuxi typecheck",
    "commit": "soy git-commit",
    "commit:zh": "soy git-commit -l=zh-cn",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@iconify-json/lucide": "^1.2.70",
    "@iconify-json/simple-icons": "^1.2.54",
    "@nuxt/image": "^1.11.0",
    "@nuxt/ui": "^4.0.1",
    "@pinia/nuxt": "^0.11.2",
    "dayjs": "^1.11.18",
    "nuxt": "^4.1.3",
    "pinia": "^3.0.3"
  },
  "devDependencies": {
    "@nuxt/eslint": "^1.9.0",
    "@soybeanjs/cli": "^1.4.0",
    "eslint": "^9.38.0",
    "lint-staged": "^16.2.5",
    "prettier": "3.6.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3",
    "vue-tsc": "^3.1.1"
  },
  "resolutions": {
    "unimport": "4.1.1"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm soy git-commit-verify",
    "pre-commit": "pnpm typecheck && pnpm lint-staged"
  },
  "pnpm": {
    "overrides": {
      "ipx": "^3.0.0"
    }
  },
  "packageManager": "pnpm@10.18.3"
}
